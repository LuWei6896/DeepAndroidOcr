    <style name="category_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_height">screen.width/640.0*52</item>
    </style>

    <style name="category_item_image">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="category_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="category_item_under_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">#75ffffff</item>
        <item name="layout_left">10dp</item>
        <item name="layout_top">prev.bottom</item>
        <item name="layout_width">100%-20dp</item>
    </style>

</resources>
